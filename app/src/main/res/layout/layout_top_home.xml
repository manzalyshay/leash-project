<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="top">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/wave_new"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:gravity="bottom"
                android:id="@+id/toolbar_home"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                app:layout_collapseMode="pin"
                android:background="#4DFFFFFF"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_menu"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/menu_icon_toolbar"
                    />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo_toolbar"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/location_icon_toolbar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_aroundme" />


                        <RelativeLayout
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/profile_layout_toolbar"

                            >
                            <ImageView
                                android:id="@+id/profile_icon_toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:src="@drawable/ic_profile" />
                            <ProgressBar
                                android:id="@+id/profile_icon_progressbar"
                                style="@android:style/Widget.Holo.Light.ProgressBar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                <ImageView
                    android:id="@+id/back_icon_toolbar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"

                    android:src="@drawable/ic_backarrow"
                    android:visibility="gone" />
                    </LinearLayout>


                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_pic_layout"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="40dp"
                >
                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:visibility="gone"
                    android:src="@mipmap/ic_launcher"
                    android:background="@drawable/circle_shape"/>
                <ProgressBar
                    android:id="@+id/profilepic_progressbar"
                    style="@android:style/Widget.Holo.Light.ProgressBar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="gone"

                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

</merge>