<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_nav_bg_color"
    android:paddingBottom="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <RelativeLayout
            android:id="@+id/attach_layout"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.15"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gear_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="1dp"
                android:src="@mipmap/leash_launcher_round"
                />
            <ProgressBar
                android:id="@+id/gear_thumb_progress"
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="match_parent">

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_layout"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/author_pic_layout"
                    >
                    <ImageView
                        android:id="@+id/gear_post_author_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/leash_launcher_round"/>
                    <ProgressBar
                        android:id="@+id/gear_post_author_photo_progressbar"
                        style="@android:style/Widget.Holo.Light.ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_toEndOf="@id/author_pic_layout"

                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/gear_post_author"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        tools:text="someauthor@email.com" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/gear_post_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"

                            android:textSize="12sp" />
                        <View
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>
                        <TextView
                            android:id="@+id/gear_post_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"

                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <include layout="@layout/include_gearpost_body_dialog"
                android:layout_margin="10dp"

                android:id="@+id/gearpost_body_layout"
                android:layout_below="@id/author_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/settings_icon"
            android:src="@drawable/ic_more_vert_white"
            android:layout_alignParentStart="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            />


        <ImageView
            android:id="@+id/back_icon_toolbar"
            android:layout_toEndOf="@id/settings_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_backarrow" />
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
