<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3"
    >
    <tcking.github.com.giraffeplayer2.VideoView
        android:id="@+id/player_video_view"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:layout_height="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/title_view"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:layout_margin="5dp"/>

            <View
                android:layout_toEndOf="@id/title_view"
                android:id="@+id/sep1"
                android:layout_width="0.5dp"
                android:layout_height="8dp"
                android:background="@color/black"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_toEndOf="@id/sep1"
                android:id="@+id/location_view"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>



            <TextView
                android:layout_toStartOf="@id/sponsor_brand"
                android:id="@+id/sponsor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="בחסות:"/>

            <TextView
                android:layout_toStartOf="@id/sponsor_logo"

                android:id="@+id/sponsor_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="InterSurf"/>

            <ImageView
                android:layout_alignParentEnd="true"

                android:id="@+id/sponsor_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/intersurf_logo"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/active_bottommenu"/>
    </LinearLayout>





</LinearLayout>