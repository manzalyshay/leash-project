<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/profile_menu"
        android:layout_weight="0.5"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forum_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="פעילות בפורום"
            android:layout_marginEnd="15dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/underline_cameras" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/store_activity"
            android:layout_marginEnd="15dp"

            android:text="פעילות בחנות"
            android:layout_toEndOf="@id/forum_activity"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/inbox"

            android:text="דואר נכנס"
            android:layout_toEndOf="@id/store_activity"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_list"
        android:layout_weight="6.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>