<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_frame_profile_fragment">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/profilepic" />
                <ProgressBar
                    android:id="@+id/profilepic_progressbar"
                    style="@android:style/Widget.Holo.Light.ProgressBar"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                     />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:text="@string/display_name"
                android:id="@+id/displayname"
                android:textSize="18sp"/>

            </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="140dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/userpostslayout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/userpostsamont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textAlignment="center"

                        android:textColor="?android:attr/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forum_menu_item"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:id="@+id/gearpostslayout"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/gearpostsamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textAlignment="center"

                        android:textColor="?android:attr/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gear_menu_item"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/incomingmessageslayout"

                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/incomingmessagesamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:textColor="?android:attr/colorPrimary"
                        android:textSize="15sp"
                        android:textAlignment="center"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inbox_menu_item"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                </LinearLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_email_black_24dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"

                >

                <ProgressBar
                    android:id="@+id/changemail_progressbar"
                    style="@android:style/Widget.Holo.Light.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:foregroundGravity="center"
                    />
                <EditText
                    android:id="@+id/useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:text="@string/mail_example" />



            </RelativeLayout>


            <ImageButton
                android:layout_width="12dp"
                android:layout_marginStart="10dp"
                android:layout_height="12dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/email_edit_btn"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_hidden_checkbox"
                    android:buttonTint="@color/colorPrimary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:paddingEnd="2dp"

                    android:layout_height="wrap_content"
                    android:text="@string/public_indicator" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_phone_android_black_24dp"/>
            <EditText
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:inputType="number"
                android:textSize="15sp"

                android:maxLength="10"
                android:id="@+id/userphonenum"
                android:text="000-0000000" />
            <ImageButton
                android:layout_width="12dp"
                android:layout_marginStart="10dp"
                android:layout_height="12dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/phone_edit_button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="5dp"
                android:orientation="vertical"
                >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_hidden_checkbox"
                android:buttonTint="@color/colorPrimary"

                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_indicator"
                android:paddingEnd="2dp"
                android:textSize="10dp"
                />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</FrameLayout>
